<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/back"
                android:gravity="start"
                android:id="@+id/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:id="@+id/name" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/star"
                android:background="@mipmap/empty_star"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/phone_number"
                android:textColor="#D5000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/phone_number"
                android:textColor="#8A000000"
                android:id="@+id/phone"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/where"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@+id/phone_number"
                android:layout_toRightOf="@+id/phone"
                android:id="@+id/where"

                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/chat"
                android:background="@mipmap/chat" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/chat"
                android:layout_alignBottom="@+id/chat"
                android:layout_marginRight="10dp"
                android:background="#1E000000"
                android:id="@+id/line"
                android:layout_toLeftOf="@+id/chat"></ImageView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#1E000000"
                android:id="@+id/line1"
                android:layout_below="@+id/where"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更多资料"
                android:textSize="20sp"
                android:layout_below="@+id/line1"
                android:id="@+id/more"
                android:textColor="#D5000000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#1E000000"
                android:id="@+id/line2"
                android:layout_below="@+id/more"></ImageView>
            <ListView
                android:id="@+id/contacts_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2">
            </ListView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>